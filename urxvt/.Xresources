! █▓▒░ interface
URxvt*scrollBar: false
URxvt*transparent: true
URxvt*shading: 20
URxvt*internalBorder: 10
URxvt*borderColor: #1c1c1c
URxvt*borderLess: false
URxvt*cursorBlink: true

! █▓▒░ extensions
URxvt.perl-ext-common: default,url-select,resize-font,keyboard-select

URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.underline: true
URxvt.url-select.autocopy: true
URxvt.url-select.launcher: /usr/bin/xdg-open

URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.keyboard-select.clipboard: true

!URxvt.perl-ext-common: default,clipboard,selection-to-keyboard,keyboard-select,url-select,resize-font
!URxvt.keysym.M-u: perl:url-select:select_next
!URxvt.url-select.underline: true
!URxvt.url-select.autocopy: true
!URxvt.url-select.launcher: /usr/bin/xdg-open
!URxvt.keysym.M-Escape: perl:keyboard-select:activate
!URxvt.keyboard-select.clipboard: true
!URxvt.keysym.M-c:   perl:clipboard:copy
!URxvt.keysym.C-v:   perl:clipboard:paste
!URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
!URxvt.clipboard.copycmd:  xsel -ib
!URxvt.clipboard.pastecmd: xsel -ob

! █▓▒░ for ctrl+shift bindings to work
URxvt.iso14755: false
URxvt.iso14755_52: false

! █▓▒░ misc
URxvt.saveLines: 9999
URxvt.meta8: true

! █▓▒░ remapping for tmux and vim
URxvt*keysym.M-space: \033\040
URxvt*keysym.M-comma: \033\,

